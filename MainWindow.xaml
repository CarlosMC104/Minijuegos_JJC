<Window x:Class="MiniVerse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniVerse"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000" KeyDown="moverPersonaje">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="600*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="500*"/>
        </Grid.RowDefinitions>

        <Image HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Grid.ColumnSpan="4" Source="images/FondoSinExit.png" Stretch="Fill" Grid.RowSpan="3"/>
        <Button x:Name="btnUniverso" Content="Button" Grid.Row="0" Grid.Column="2" Margin="5" Width="Auto" VerticalAlignment="Stretch"/>
        <Button Content="Button" Grid.Row="0" Grid.Column="3" Margin="5" Width="Auto" VerticalAlignment="Stretch"/>
        <Button Content="Button" Grid.Row="1" Grid.Column="2" Margin="5" Width="Auto" VerticalAlignment="Stretch"/>
        <Button Content="Button" Grid.Row="1" Grid.Column="3" Margin="5" Width="Auto" VerticalAlignment="Stretch"/>
        <Image x:Name="imgPersonaje" Grid.Column="1" HorizontalAlignment="Left" Height="100" Margin="259.8,216.8,0,0" Grid.Row="2" VerticalAlignment="Top" Width="100" Source="images/ovni.png"/>
        <Image Margin="0" Grid.RowSpan="2" Source="/img/logo1.jpg" Stretch="Fill"/>


    </Grid>
</Window>
